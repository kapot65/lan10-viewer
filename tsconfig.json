{
  "compilerOptions": {
	"allowJs":true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "system",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": false,
    "noLib": false,
    "target": "es6",
    "outDir": "public_html/js/"
  },
  "exclude": [
    "node_modules",
    "public_html"
  ]
}
